import java.util.Scanner;
import java.util.HashMap;

public class Main {
    
    // Required method
    public static int getWordFrequency(String[] wordsList, int listSize, String currWord) {
        int count = 0;
        for (int i = 0; i < listSize; i++) {
            if (wordsList[i].equalsIgnoreCase(currWord)) {
                count++;
            }
        }
        return count;
    }

    public static void main(String[] args) {
        Scanner keyboard = new Scanner(System.in);

        // Read input words (less than 20, same line)
        String inputLine = keyboard.nextLine();
        String[] words = inputLine.split(" ");
        int size = words.length;

        // HashMap to store word frequencies
        HashMap<String, Integer> wordMap = new HashMap<>();

        // Populate HashMap using getWordFrequency
        for (int i = 0; i < size; i++) {
            String wordLower = words[i].toLowerCase();

            if (!wordMap.containsKey(wordLower)) {
                int freq = getWordFrequency(words, size, words[i]);
                wordMap.put(wordLower, freq);
            }
        }

        // Output results (preserve original order & casing)
        for (int i = 0; i < size; i++) {
            String wordLower = words[i].toLowerCase();
            System.out.println(words[i] + " " + wordMap.get(wordLower));
        }
    }
}
